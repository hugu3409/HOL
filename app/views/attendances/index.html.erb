<p id="notice"><%= notice %></p>

<h1>Attendances</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Student</th>
      <th>Situation</th>
      <th>Reason</th>
      <th>Period start</th>
      <th>Period end</th>
      <th>Comment</th>
      <th>Teacher</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attendances.each do |attendance| %>
      <tr>
        <td><%= attendance.date %></td>
        <td><%= attendance.student_id %></td>
        <td><%= attendance.situation_id %></td>
        <td><%= attendance.reason %></td>
        <td><%= attendance.period_start %></td>
        <td><%= attendance.period_end %></td>
        <td><%= attendance.comment %></td>
        <td><%= attendance.teacher_id %></td>
        <td><%= link_to 'Show', attendance %></td>
        <td><%= link_to 'Edit', edit_attendance_path(attendance) %></td>
        <td><%= link_to 'Destroy', attendance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

